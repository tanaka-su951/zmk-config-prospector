/*
 * Device Tree overlay for APDS9960 sensor support
 * Only used when CONFIG_PROSPECTOR_USE_AMBIENT_LIGHT_SENSOR=y
 */

// I2C0 configuration for ambient light sensor
&i2c0 {
    compatible = "nordic,nrf-twim";
    status = "disabled"; // I2C バス全体を無効化

    // 🚨 修正: 以下の pinctrl 参照は全て削除します。
    // pinctrl-names = "default", "sleep"; // 削除済み
    // clock-frequency = <I2C_BITRATE_STANDARD>; // 削除済み

    // APDS9960 ambient light sensor
    apds9960: apds9960@39 {
        compatible = "avago,apds9960";
        reg = <0x39>;
        status = "disabled"; // センサーノードも無効化
        int-gpios = <&gpio0 28 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>; // D2 = P0.28
    };
};

// Required pinctrl configurations (ノード定義自体は残します)
&pinctrl {
    // I2Cバスが disabled のため、これらの定義はビルドに影響しませんが、定義自体は残します
    i2c0_default: i2c0_default {
        group1 {
            psels = <NRF_PSEL(TWIM_SDA, 0, 4)>,  // Pin 4 (D4) = P0.04 = SDA
                    <NRF_PSEL(TWIM_SCL, 0, 5)>;  // Pin 5 (D5) = P0.05 = SCL
        };
    };

    i2c0_sleep: i2c0_sleep {
        group1 {
            psels = <NRF_PSEL(TWIM_SDA, 0, 4)>,  // Pin 4 (D4) = P0.04 = SDA
                    <NRF_PSEL(TWIM_SCL, 0, 5)>;  // Pin 5 (D5) = P0.05 = SCL
            low-power-enable;
        };
    };
};

// ST7789V ディスプレイが使用する SPI バスを有効化
&spi0 {
    status = "okay";
};
