    i2c0_default: i2c0_default {
        group1 {
            psels = <NRF_PSEL(TWIM_SDA, 0, 4)>,  // Pin 4 (D4) = P0.04 = SDA
                    <NRF_PSEL(TWIM_SCL, 0, 5)>;  // Pin 5 (D5) = P0.05 = SCL
        };
    };

    i2c0_sleep: i2c0_sleep {
        group1 {
            psels = <NRF_PSEL(TWIM_SDA, 0, 4)>,  // Pin 4 (D4) = P0.04 = SDA
                    <NRF_PSEL(TWIM_SCL, 0, 5)>;  // Pin 5 (D5) = P0.05 = SCL
            low-power-enable;
        };
    };
    
    // ğŸš¨ ä¿®æ­£: ãƒ‡ã‚£ã‚¹ãƒ—ãƒ¬ã‚¤ç”¨ã®SPI0ãƒ”ãƒ³ã‚’æ­£ç¢ºã«å®šç¾©
    spi0_default: spi0_default {
