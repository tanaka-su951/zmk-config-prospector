// I2C0 configuration for ambient light sensor
&i2c0 {
    compatible = "nordic,nrf-twim";
    status = "disabled"; // ğŸš¨ ä¿®æ­£: I2C ãƒã‚¹å…¨ä½“ã‚’ç„¡åŠ¹åŒ–

    // ä»¥ä¸‹ã® pinctrl å‚ç…§ã¯ã€I2C ãŒ disabled ã®ãŸã‚å‰Šé™¤ã—ã¾ã™ã€‚
    // ãƒ“ãƒ«ãƒ‰ã‚·ã‚¹ãƒ†ãƒ ãŒã€ç„¡åŠ¹ãª I2C ãƒ‰ãƒ©ã‚¤ãƒã¨æœ‰åŠ¹ãª pinctrl ã‚’çµã³ã¤ã‘ã¦ã‚¨ãƒ©ãƒ¼ã‚’å‡ºã™ã®ã‚’é˜²ãã¾ã™ã€‚
    // pinctrl-0 = <&i2c0_default>; // ğŸ‘ˆ å‰Šé™¤
    // pinctrl-1 = <&i2c0_sleep>;   // ğŸ‘ˆ å‰Šé™¤
    pinctrl-names = "default", "sleep"; // ğŸš¨ pinctrl-0, pinctrl-1 ã‚’å‰Šé™¤ã™ã‚‹å ´åˆã¯ã€ã“ã‚Œã‚‚å‰Šé™¤
    
    clock-frequency = <I2C_BITRATE_STANDARD>;

    // APDS9960 ambient light sensor
    apds9960: apds9960@39 {
        compatible = "avago,apds9960";
        reg = <0x39>;
        status = "disabled"; // ã‚»ãƒ³ã‚µãƒ¼ãƒãƒ¼ãƒ‰ã‚‚ç„¡åŠ¹åŒ–
        int-gpios = <&gpio0 28 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>; // D2 = P0.28
    };
};

// Required pinctrl configurations (ãƒãƒ¼ãƒ‰å®šç¾©è‡ªä½“ã¯æ®‹ã—ã¾ã™)
&pinctrl {
    i2c0_default: i2c0_default {
        group1 {
            psels = <NRF_PSEL(TWIM_SDA, 0, 4)>,  // Pin 4 (D4) = P0.04 = SDA
                    <NRF_PSEL(TWIM_SCL, 0, 5)>;  // Pin 5 (D5) = P0.05 = SCL
        };
    };

    i2c0_sleep: i2c0_sleep {
        group1 {
            psels = <NRF_PSEL(TWIM_SDA, 0, 4)>,  // Pin 4 (D4) = P0.04 = SDA
                    <NRF_PSEL(TWIM_SCL, 0, 5)>;  // Pin 5 (D5) = P0.05 = SCL
            low-power-enable;
        };
    };
};
