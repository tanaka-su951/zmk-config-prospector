/*
 * Device Tree overlay for Seeeduino XIAO BLE - Prospector Config
 * 1. Disables I2C0 bus (to resolve APDS9960 conflict when CONFIG_PROSPECTOR_USE_AMBIENT_LIGHT_SENSOR=n)
 * 2. Enables SPI0 bus and configures pins for ST7789V display.
 */

// I2C0 configuration for ambient light sensor (強制無効化)
&i2c0 {
    compatible = "nordic,nrf-twim";
    status = "disabled"; 
    
    // I2Cバスが無効化されたため、pinctrl関連のプロパティはすべて削除
    // clock-frequency = <I2C_BITRATE_STANDARD>; // 削除
    // pinctrl-names = "default", "sleep"; // 削除

    apds9960: apds9960@39 {
        compatible = "avago,apds9960";
        reg = <0x39>;
        status = "disabled"; 
        int-gpios = <&gpio0 28 (GPIO_ACTIVE_LOW | GPIO_PULL_UP)>; // D2 = P0.28
    };
};

// Required pinctrl configurations (ノード定義自体は残す)
&pinctrl {
    // I2Cのピン定義は残します（ビルドには影響しない）
    i2c0_default: i2c0_default {
        group1 {
            psels = <NRF_PSEL(TWIM_SDA, 0, 4)>,  // Pin 4 (D4) = P0.04 = SDA
                    <NRF_PSEL(TWIM_SCL, 0, 5)>;  // Pin 5 (D5) = P0.05 = SCL
        };
    };

    i2c0_sleep: i2c0_sleep {
        group1 {
            psels = <NRF_PSEL(TWIM_SDA, 0, 4)>,  // Pin 4 (D4) = P0.04 = SDA
                    <NRF_PSEL(TWIM_SCL, 0, 5)>;  // Pin 5 (D5) = P0.05 = SCL
            low-power-enable;
        };
    };
    
    // 🚨 修正: ディスプレイ用のSPI0ピンを正確に定義
    spi0_default: spi0_default {
        group1 {
            psels = <NRF_PSEL(SPIM_SCK, 0, 13)>,  // Pin 8 (D8) = P0.13 = LCD_CLK
                    <NRF_PSEL(SPIM_MOSI, 0, 12)>, // Pin 10 (D10) = P0.12 = LCD_DIN
                    <NRF_PSEL(SPIM_CSN, 0, 15)>;  // Pin 9 (D9) = P0.15 = LCD_CS
        };
    };
};

// 🚨 修正: SPI0を有効化し、新しいピン設定を適用
&spi0 {
    status = "okay";
    pinctrl-0 = <&spi0_default>;
    pinctrl-names = "default";
};

// 🚨 修正: PWM LED (バックライト) ノードの定義
// LCD_BL -> Pin 6 (D6) = P0.09
&pwm0 {
    status = "okay"; // PWM0を有効化
};

// GPIO ノードの有効化 (LCD_DCとLCD_RSTピンを使用するため必須)
&gpio0 {
    status = "okay";
};
